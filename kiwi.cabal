name:                kiwi
version:             0.1.0
synopsis:            A wiki manager
description:         A wiki manager
homepage:            http://github.com/acieroid/kiwi
license:             BSD3
license-file:        LICENSE
author:              Quentin Stievenart
maintainer:          quentin.stievenart@gmail.com
-- copyright:
category:            Web
build-type:          Simple
extra-source-files:  README.org
cabal-version:       >=1.10

source-repository head
  type:                git
  location:            http://github.com/acieroid/kiwi

executable kiwi
  main-is:             Main.hs
  build-depends:       base >=4.6 && <4.8
                       , aeson
                       , blaze-builder
                       , blaze-html
                       , blaze-markup
                       , bytestring
                       , cmdargs
                       , containers
                       , cryptohash
                       , directory
                       , enumerator
                       , filepath
                       , haskelldb
                       , haskelldb-hdbc
                       , HDBC
                       , HDBC-sqlite3
                       , http-streams
                       , http-types
                       , io-streams
                       , pandoc
                       , regex-compat
                       , text
                       , time
                       , transformers
                       , utf8-string
                       , wai
                       , wai-app-static
                       , warp
  default-language:    Haskell2010
