-- Initial kiwi.cabal generated by cabal init.  For further documentation, 
-- see http://haskell.org/cabal/users-guide/

name:                kiwi
version:             0.1.0
synopsis:            A wiki manager
-- description:         
homepage:            http://github.com/acieroid/kiwi
license:             BSD3
license-file:        LICENSE
author:              Quentin Stievenart
maintainer:          quentin.stievenart@gmail.com
-- copyright:           
category:            Web
build-type:          Simple
extra-source-files:  README.org
cabal-version:       >=1.10

executable kiwi
  main-is:             Main.hs
  other-modules:       Kiwi.Data
                       Kiwi.Render
                       Kiwi.Storage
  -- other-extensions:    
  build-depends:       base >=4.6 && <4.7
                       , containers
                       , pandoc
                       , blaze-markup
                       , regex-compat
                       , text
                       , directory
                       , filepath
                       , blaze-html
                       , bytestring
                       , hedis
                       , time
                       , cryptohash
                       , transformers
  -- hs-source-dirs:      
  default-language:    Haskell2010

executable api
  main-is:             API.hs
  other-modules:       Kiwi.Data
                       Kiwi.Storage
  build-depends:       base >=4.6 && <4.7
                       , containers
                       , pandoc
                       , blaze-markup
                       , regex-compat
                       , text
                       , directory
                       , filepath
                       , blaze-html
                       , bytestring
                       , hedis
                       , time
                       , cryptohash
                       , transformers
                       , wai
                       , warp
                       , http-types
                       , enumerator
                       , utf8-string
                       , blaze-builder
                       , aeson
  default-language:    Haskell2010
